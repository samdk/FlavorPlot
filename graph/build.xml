<project default="compile">
    <target name="compile">
        <javac srcdir="src" debug="on" destdir="dist" classpath=".:dist/opencsv-2.2.jar"/>
    </target>
    
    <target name="clean">
        <delete failonerror="false">
            <fileset dir="dist" includes="**/*"/>
        </delete>
    </target>
    
    <target name="run" depends="compile">
        <java classname="Runner" classpath="dist:dist/opencsv-2.2.jar" fork="true">
            <jvmarg value="-Xmx1024m" />
            <jvmarg value="-Xms512m" />
            <jvmarg value="-server" />
        </java>
    </target>
</project>